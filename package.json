{
  "name": "micro-frontend-starter",
  "version": "0.0.1",
  "description": "Template for starter of micro frontends",
  "main": "index.js",
  "scripts": {
    "bootstrap": "pnpm i",
    "dev": "cross-env VITE_MICRO_MODE=true tsx ./scripts/dev.ts",
    "dev:main": "pnpm run dev --app main",
    "dev:subapp1": "pnpm run dev --app subapp1",
    "dev:subapp2": "pnpm run dev --app subapp2",
    "dev:subapp3": "pnpm run dev --app subapp3",
    "build": "cross-env VITE_MICRO_MODE=true tsx ./scripts/build.ts",
    "build:plugin": "pnpm run build --app plugin",
    "build:main": "pnpm run build --app main",
    "build:subapp1": "pnpm run build --app subapp1",
    "build:subapp2": "pnpm run build --app subapp2",
    "build:subapp3": "pnpm run build --app subapp3",
    "lint": "eslint --ext .js,.ts,.vue --fix ./packages/*/src",
    "prettier": "prettier --write --ignore-unknown '**/*'",
    "commit": "git-cz",
    "release": "npx bumpp --push --tag --commit 'release: v'",
    "prepare": "husky install"
  },
  "keywords": [
    "micro-frontends",
    "qiankun",
    "vue",
    "react",
    "svelte"
  ],
  "author": "yugasun",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "bumpp": "^7.1.1",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "minimist": "^1.2.6",
    "picocolors": "^1.0.0",
    "prettier": "^2.6.2",
    "standard-version": "^9.5.0",
    "tsx": "^3.8.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vite-plugin-dts": "^1.4.1"
  }
}
